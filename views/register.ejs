  <%- include('./partials/header') %>

  <div class="form-container">
    <h2>Sign up form</h2>
    <form action="/register" method="POST">
      <div>
        <label for="pname">Username:</label>
        <input class="form-control" type="text" id="pname" name="pname" required>
      </div>
      <div>
        <label for="pword">Password:</label>
        <input class="form-control" type="password" id="pword" name="pword" required>
      </div>
      <br />
      <div>
        <button type="submit" class="btn btn-success" style="width: 15%!important;">Register</button>
        <button type="button" class="btn btn-warning"><a href="/login" style="text-decoration: none;">Back</a></button>
      </div>
    </form>
  </div>
<script>
  document.addEventListener('DOMContentLoaded', function() {
  registerForm.addEventListener('submit', function(event) {
    event.preventDefault();
    const formData = new FormData();
    formData.append('pname', document.getElementById("pname").value);
    formData.append('pword', document.getElementById("pword").value);
    fetch('/register', {
      method: 'POST',
      body: formData
    })
    .then(response => {
      if (response.ok) {
        // Handle successful registration
        console.log('Registration successful');
        // response.redirect('/login');
      } else {
        // Handle failed registration
        console.error('Registration failed');
      }
    })
    .catch(error => {
      // Handle network errors
      console.error('Network error:', error);
    });
  });
});
</script>

